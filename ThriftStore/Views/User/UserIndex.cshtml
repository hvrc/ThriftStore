@model List<ThriftStore.Models.User>

<div class="container mt-5">
    <h2>Users</h2>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="UserDetails" asp-route-id="@user.UserID">Details</a>
                        <a asp-action="UserEdit" asp-route-id="@user.UserID">Edit</a>
                        <a asp-action="UserDelete" asp-route-id="@user.UserID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>
        <a asp-action="UserRegistration">Register as a User</a>
    </p>
</div>
